            </ListBox.ItemTemplate>
        </ListBox>-->

        <Border
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            BorderBrush="LightGray"
            BorderThickness="1 1 1 1"
            >
            <TextBox
                x:Name="MessageUser"
                Background="White"

                Foreground="Black"
                FontSize="16"
                TextWrapping="Wrap" 
                FontFamily="Segoe UI"
            ></TextBox>
        </Border>
            <Button
            Click="ClickButtonSendMessage"
            Grid.Column="2"
            Grid.Row="7"
            Width="200"
            Height="30"
            Content="Отправить"
            FontSize="16"
            Foreground="Black"
            Background="LightGray"
            FontFamily="Segoe UI"
            ></Button>
            <Label
                Background="Transparent"
                x:Name="downTray"
                Grid.Row="8"
                Grid.ColumnSpan="4"
                Padding="1 1 1 1"
                ></Label>
            <Label
                Foreground="Transparent"
                x:Name="chatUser"></Label>
        </Grid>
    </Border>
</Window>
