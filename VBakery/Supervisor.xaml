                                    VerticalContentAlignment="Center"
                                    Padding="1 1 1 1"
                                        Width="120" 
                                        FontSize="12" 
                                        Height="20" 
                                        FontWeight="Normal"
                                        FontFamily="Segoe UI"
                                        Content="Заказы Покупателя">
                                </Label>
                            </TabItem.Header>
                            <TabItem.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="200"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <!--//Заголовок Заказы Покупаткля-->
                                    <Border
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="10"
                                        BorderBrush="LightGray"
                                        BorderThickness="1 1 1 1">

                                        <Label
                                            Background="AliceBlue"
                                            x:Name="DownTrayBuyerOrders"
                                            Foreground="Black"
                                            Margin="1 1 1 1"
                                            Padding="1 1 1 1"
                                            HorizontalContentAlignment="Right"
                                            >
                                        </Label>
                                    </Border>

                                    <!--//Нижняя строка ошибок-->
                                    <ScrollViewer 
                            Grid.Row="0" 
                            Grid.Column="0"
                            Grid.ColumnSpan="3" 
                            ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="2,0,198,0">
                                        <StackPanel 
                                            Orientation="Vertical">
                                            <DataGrid 
                                                x:Name="UserOrder" 
                                                FontSize="14" 
                                                FontWeight="Normal" 
                                                AutoGenerateColumns="False"
                                                FontFamily="Segoe UI">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn
                                                        x:Name="Id"
                                                        FontWeight="Light"
                                                        Binding="{Binding Id}"  
                                                        IsReadOnly="True" 
                                                        Header="№" 
                                                        Width="50"
                                                        FontFamily="Segoe UI">
                                                    </DataGridTextColumn>
                                                    <DataGridTemplateColumn 
                                                        x:Name="name"
                                                        IsReadOnly="True" 
                                                        Header="Имя"
                                                        Width="100">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                                    FontFamily="Segoe UI"
                                                                    FontWeight="Light"
                                                                    Text="{Binding name}"  
                                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn 
                                                        x:Name="mobile" 
                                                        Binding="{Binding mobile}" 
                                                        IsReadOnly="True" 
                                                        FontWeight="Light"
                                                        Header="Телефон" 
                                                        Width="100"
                                                        FontFamily="Segoe UI"/>
                                                    <DataGridTemplateColumn 
                                                        x:Name="weight" 
                                                        IsReadOnly="True" 
                                                        Header="Вес" 
                                                        Width="40">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                                    FontFamily="Segoe UI"
                                                                    FontWeight="Light"
                                                                    Text="{Binding weight}"  
                                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="nameProduct" 
                                        IsReadOnly="True" 
                                        Header="Название продукта" 
                                        Width="200">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding nameProduct}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="comm" 
                                        IsReadOnly="True" 
                                        Header="Комментарии" 
                                        Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding comm}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="address" 
                                        IsReadOnly="True" 
                                        Header="Адресс доставки" 
                                        Width="200">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding address}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn 
                                            x:Name="data" 
                                            Binding="{Binding data}" 
                                            IsReadOnly="True" 
                                            FontWeight="Light"
                                            Header="Дата доставки" 
                                            Width="100"
                                            FontFamily="Segoe UI"/>
                                                    <DataGridTemplateColumn 
                                                        x:Name="dateTime"
                                                        IsReadOnly="True" 
                                                        Header="Дата заявки"
                                                        Width="100">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding dateTime}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                                        x:Name="total"
                                                        IsReadOnly="True" 
                                                        Header="Сумма заявки"
                                                        Width="100">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding total}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </ScrollViewer>
                                    <!--//Данные из БД-->
                                    <StackPanel 
                                        
                                        Background="AliceBlue"
                                        Orientation="Vertical"
                                        Grid.Row="0"
                                        Grid.Column="2" 
                                        Height="auto"
                                        Margin="5 2 2 2"
                                        >
                                        <Border>
                                            <Border.Effect>
                                                <DropShadowEffect Color="LightGray"/>
                                            </Border.Effect>
                                            <Button
                                    Margin="0 5 0 5"
                                    Height="20"
                                    Width="100"
                                    Content="Обновить"
                                    Click="GetDataBuyer"
                                    FontSize="12"
                                    Background="LightGray"
                                    FontFamily="Segoe UI">
                                            </Button>
                                        </Border>
                                        <!--//Кнопка получить данные страницы-->
                                        <Border
                                BorderBrush="LightGray"
                                BorderThickness="1 1 1 0">
                                            <TextBlock
                                    x:Name="SetOrderId"
                                    Height="20"
                                    Margin="0 5 0 5"
                                    Text="Введите номер заказа для удаления "
                                    FontSize="11"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI">
                                            </TextBlock>
                                            <!--//Введите номер для удаления-->
                                        </Border>
                                        <!--//Ввод ID-->
                                        <Border
                                BorderBrush="LightGray"
                                BorderThickness="1 0 1 1">
                                            <TextBox
                                    Height="30"
                                    Margin="0 5 0 5"
                                    FontFamily="Segoe UI"
                                    x:Name="SetIdBuyer"
                                    FontSize="12"
                                    IsReadOnly="True"
                                    BorderBrush="AliceBlue"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    Background="Azure">
                                            </TextBox>
                                            <!--//Окно ввода ID-->
                                        </Border>
                                        <ScrollBar 
                                Value="1"
                                Minimum="1" 
                                Maximum="9999"
                                SmallChange="1"
                                ValueChanged="ScrollBar_ValueChanged"
                                x:Name="numeric" RenderTransformOrigin="0.5,0.5"
                                >
                                            <ScrollBar.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="-92.054"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </ScrollBar.RenderTransform>
                                        </ScrollBar>
                                        <!--//Ввод ID-->
                                        <Border>
                                            <Border.Effect>
                                                <DropShadowEffect Color="LightGray"/>
                                            </Border.Effect>
                                            <Button
                                    Width="100"
                                    Margin="0 5 0 5"
                                    Height="20"
                                    Content="Удалить запись"
                                    Click="RemoveLastOrder"
                                    FontSize="12"
                                    Background="LightGray"
                                    FontFamily="Segoe UI">
                                            </Button>
                                        </Border>
                                        <!--//Кнопка удалить запись по ID-->

