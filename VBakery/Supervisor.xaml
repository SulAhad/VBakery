<Window x:Class="VBakery.Supervisor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VBakery"

        mc:Ignorable="d"
        Title="Supervisor" Height="768" Width="1014" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle 
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="10">
            <Rectangle.Fill>
                <LinearGradientBrush
                    >
                    <GradientStop Color="Indigo" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <!--//Палитра для верхней строки-->
        <Image
            Margin="1 1 1 1"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\image.jfif"
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Left"
            ></Image>
        <!--//Иконка Вкусляндия-->
        <Button
            Click="ButtonClickClose"
            BorderBrush="Transparent"
            Grid.Column="9"
            Grid.Row="0"
            Background="Transparent">
            <Image
            Width="15"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\close.png"
            >
            </Image>
        </Button>
        <!--//Кнопка закрыть окно-->
        <Button
            Click="ButtonClickPlus"
            BorderBrush="Transparent"
            Grid.Column="8"
            Grid.Row="0"
            Background="Transparent">
            <Image
            Width="20"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\plus.png"
            >
            </Image>
        </Button>
        <!--//Кнопка расширить окно-->
        <Rectangle 
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="10">
            <Rectangle.Fill>
                <LinearGradientBrush
                    >
                    <GradientStop Color="AliceBlue" Offset="0"></GradientStop>
                    <GradientStop Color="White" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <!--//Заливка панели администратора-->
        <Button
            Click="ButtonClickMinus"
            BorderBrush="Transparent"
            Grid.Column="7"
            Grid.Row="0"
            Background="Transparent">
            <Image
            Width="20"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\minus.png"
            >
            </Image>
        </Button>
        <!--//Кнопка свернуть окно-->
        <Label
            Margin="30 0 0 0"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Content="Вкусляндия"
            Foreground="Wheat"
            FontSize="20"
            FontFamily="Monotype Corsiva"
            >
        </Label>
        <!--//Надпись Вкусляндия-->
        <Button
            Background="Transparent"
            Margin="4 1 1 1"
            Grid.Column="0"
            Grid.Row="1"
            Click="GoBackToHome"
            Width="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            >
            <Image
                Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\dom.png">

            </Image>
        </Button>
        <!--//Кнопка вернутся домой-->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="10"
            Content="Панель администратора"
            FontSize="16"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Right"
            Background="AliceBlue"

            Padding="1 1 1 1"
            ></Label>
        <!--//Надпись Панель Администратора-->
        <TabControl 
            Background="Gainsboro"
            Grid.Column="0"
            Grid.Row="2"
            Grid.RowSpan="7"
            Grid.ColumnSpan="10"
            TabStripPlacement="Top"
            BorderBrush="LightSlateGray"
            BorderThickness="1 1 1 1"
            Margin="1 1 1 1"
            >
            <TabItem
                BorderBrush="LightGray"
                Background="LightGray"
                BorderThickness="1 1 1 1"
                FontFamily="Segoe UI"
                >
                <TabItem.Header>
                    <Label 
                        Padding="1 1 1 1"
                        Content="Покупатель" 
                        Width="120" 
                        FontSize="14" 
                        Height="20" 
                        FontWeight="Normal"
                        FontFamily="Segoe UI"
                        >
                    </Label>
                </TabItem.Header>
                <TabItem.Content>
                    <TabControl>
                        <TabItem>
                            <TabItem.Header>
                                <Label
                                    VerticalContentAlignment="Center"
                                    Padding="1 1 1 1"
                                        Width="120" 
                                        FontSize="12" 
                                        Height="20" 
                                        FontWeight="Normal"
                                        FontFamily="Segoe UI"
                                        Content="Заказы Покупателя">
                                </Label>
                            </TabItem.Header>
                            <TabItem.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="200"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <!--//Заголовок Заказы Покупаткля-->
                                    <Border
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="10"
                                        BorderBrush="LightGray"
                                        BorderThickness="1 1 1 1">

                                        <Label
                                            Background="AliceBlue"
                                            x:Name="DownTrayBuyerOrders"
                                            Foreground="Black"
                                            Margin="1 1 1 1"
                                            Padding="1 1 1 1"
                                            HorizontalContentAlignment="Right"
                                            >
                                        </Label>
                                    </Border>

                                    <!--//Нижняя строка ошибок-->
                                    <ScrollViewer 
                            Grid.Row="0" 
                            Grid.Column="0"
                            Grid.ColumnSpan="3" 
                            ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="2,0,198,0">
                                        <StackPanel 
                                            Orientation="Vertical">
                                            <DataGrid 
                                                x:Name="UserOrder" 
                                                FontSize="14" 
                                                FontWeight="Normal" 
                                                AutoGenerateColumns="False"
                                                FontFamily="Segoe UI">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn
                                                        x:Name="Id"
                                                        FontWeight="Light"
                                                        Binding="{Binding Id}"  
                                                        IsReadOnly="True" 
                                                        Header="№" 
                                                        Width="50"
                                                        FontFamily="Segoe UI">
                                                    </DataGridTextColumn>
                                                    <DataGridTemplateColumn 
                                                        x:Name="name"
                                                        IsReadOnly="True" 
                                                        Header="Имя"
                                                        Width="100">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                                    FontFamily="Segoe UI"
                                                                    FontWeight="Light"
                                                                    Text="{Binding BuyerName}"  
                                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn 
                                                        x:Name="mobile" 
                                                        Binding="{Binding BuyerMobile}" 
                                                        IsReadOnly="True" 
                                                        FontWeight="Light"
                                                        Header="Телефон" 
                                                        Width="100"
                                                        FontFamily="Segoe UI"/>
                                                    <DataGridTemplateColumn 
                                                        x:Name="weight" 
                                                        IsReadOnly="True" 
                                                        Header="Вес" 
                                                        Width="40">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                                    FontFamily="Segoe UI"
                                                                    FontWeight="Light"
                                                                    Text="{Binding WeightProduct}"  
                                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="nameProduct" 
                                        IsReadOnly="True" 
                                        Header="Название продукта" 
                                        Width="200">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding NameProduct}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="comm" 
                                        IsReadOnly="True" 
                                        Header="Комментарии" 
                                        Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding StaffComment}"  
                                                    TextWrapping="Wrap">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                        x:Name="address" 
                                        IsReadOnly="True" 
                                        Header="Адресс доставки" 
                                        Width="200">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding DeliveryAddress}"  
                                                    TextWrapping="Wrap"
                                                                    HorizontalAlignment="Center">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn 
                                            x:Name="data" 
                                            Binding="{Binding DeliveryDate}" 
                                            IsReadOnly="True" 
                                            FontWeight="Light"
                                            Header="Дата доставки" 
                                            Width="100"
                                            FontFamily="Segoe UI"
                                                        />
                                                    <DataGridTemplateColumn 
                                                        x:Name="dateTime"
                                                        IsReadOnly="True" 
                                                        Header="Дата заявки"
                                                        Width="100"
                                                        >
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding OrderDateTime}"  
                                                    TextWrapping="Wrap"
                                                                    HorizontalAlignment="Center">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn 
                                                        x:Name="total"
                                                        IsReadOnly="True" 
                                                        Header="Сумма заявки"
                                                        Width="100">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock 
                                                    FontFamily="Segoe UI"
                                                    FontWeight="Light"
                                                    Text="{Binding OrderPrice}"  
                                                    TextWrapping="Wrap"
                                                                    HorizontalAlignment="Center">
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </ScrollViewer>
                                    <!--//Данные из БД-->
                                    <StackPanel 
                                        
                                        Background="AliceBlue"
                                        Orientation="Vertical"
                                        Grid.Row="0"
                                        Grid.Column="2" 
                                        Height="auto"
                                        Margin="5 2 2 2"
                                        >
                                        <Border>
                                            <Border.Effect>
                                                <DropShadowEffect Color="LightGray"/>
                                            </Border.Effect>
                                            <Button
                                    Margin="0 5 0 5"
                                    Height="20"
                                    Width="150"
                                    Content="Обновить"
                                    Click="GetDataBuyer"
                                    FontSize="12"
                                    Background="LightGray"
                                    FontFamily="Segoe UI">
                                            </Button>
                                        </Border>
                                        <!--//Кнопка получить данные страницы-->
                                        <Border
                                BorderBrush="LightGray"
                                BorderThickness="1 1 1 0">
                                            <TextBlock
                                    x:Name="SetOrderId"
                                    Height="20"
                                    Margin="0 5 0 5"
                                    Text="Введите номер заказа для удаления "
                                    FontSize="11"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI">
                                            </TextBlock>
                                            <!--//Введите номер для удаления-->
                                        </Border>
                                        <!--//Ввод ID-->
                                        <Border
                                BorderBrush="LightGray"
                                BorderThickness="1 0 1 1">
                                            <TextBox
                                    Height="30"
                                                Width="150"
                                    Margin="0 5 0 5"
                                    FontFamily="Segoe UI"
                                    x:Name="InputIdForDelete"
                                    FontSize="20"
                                    IsReadOnly="True"
                                    BorderBrush="AliceBlue"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    Background="Azure">
                                            </TextBox>
                                            <!--//Окно ввода ID-->
                                        </Border>
                                        <!--<ScrollBar 
                                Value="1"
                                Minimum="1" 
                                Maximum="9999"
                                SmallChange="1"
                                ValueChanged="ScrollBar_ValueChanged"
                                x:Name="numeric" RenderTransformOrigin="0.5,0.5"
                                >
                                            <ScrollBar.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="-92.054"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </ScrollBar.RenderTransform>
                                        </ScrollBar>-->
                                        <!--//Ввод ID-->
                                        <Button Click="ButtonClickClear" Width="150" Height="20" Content="Очистить" Margin="1 10 1 10"></Button>
                                        <WrapPanel
                                Width="auto"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                            <Button Margin="1 1 1 1" Click="ButtonClick_1" Width="45" Height="40">1</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_2" Width="45" Height="40">2</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_3" Width="45" Height="40">3</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_4" Width="45" Height="40">4</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_5" Width="45" Height="40">5</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_6" Width="45" Height="40">6</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_7" Width="45" Height="40">7</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_8" Width="45" Height="40">8</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_9" Width="45" Height="40">9</Button>
                                            <Button Margin="1 1 1 1" Click="ButtonClick_0" Width="45" Height="40">0</Button>
                                        </WrapPanel>
                                        <Border>
                                            <Border.Effect>
                                                <DropShadowEffect Color="LightGray"/>
                                            </Border.Effect>
                                            <Button
                                    Width="150"
                                    Margin="0 5 0 5"
                                    Height="20"
                                    Content="Удалить запись"
                                    Click="RemoveLastOrder"
                                    FontSize="12"
                                    Background="LightGray"
                                    FontFamily="Segoe UI">
                                            </Button>
                                        </Border>
                                        <!--//Кнопка удалить запись по ID-->

                                        <Label
                                Content="Количество открытых заказов"
                                FontFamily="Segoe UI"
                                >
                                        </Label>
                                        <TextBlock
                                x:Name="VisitBuyer"
                                Height="20"
                                Margin="1 1 1 1"
                                VerticalAlignment="Center"
                                FontSize="12"
                                HorizontalAlignment="Center"
                                FontFamily="Segoe UI">

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </TabItem.Content>
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <Label
                                    Width="auto" 
                                    FontSize="12" 
                                    FontWeight="Normal"
                                    FontFamily="Segoe UI"
                                    Padding="1 1 1 1"
                                    Content="Редактировать меню"
                                    Height="20">
                                </Label>
                            </TabItem.Header>
                            <TabItem.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="30"></RowDefinition>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Content="Название торта"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        ></Label>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Content="Цена торта"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        ></Label>
                                    <TextBlock Text="Фруктовый торт" Grid.Column="0" Grid.Row="1"></TextBlock>
                                    <TextBlock Text="Торт для мальчиков" Grid.Column="0" Grid.Row="2"></TextBlock>
                                    <TextBlock Text="Шоколадный торт" Grid.Column="0" Grid.Row="3"></TextBlock>
                                    <TextBlock Text="Муссовый торт" Grid.Column="0" Grid.Row="4"></TextBlock>
                                    <TextBlock Text="Свадебный торт" Grid.Column="0" Grid.Row="5"></TextBlock>
                                    <TextBlock Text="Торт на день рождения" Grid.Column="0" Grid.Row="6"></TextBlock>
                                    <TextBlock Text="Детский торт" Grid.Column="0" Grid.Row="7"></TextBlock>

                                    <TextBox Grid.Column="1" Grid.Row="1" Name="priceFruct"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="2" Name="priceMan"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="3" Name="priceShoko"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="4" Name="priceMussoviy"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="5" Name="priceSvadebniy"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="6" Name="priceBirthday"></TextBox>
                                    <TextBox Grid.Column="1" Grid.Row="7" Name="priceKids"></TextBox>

                                    <Button Grid.Column="2" Grid.Row="7" Content="Добавить" Click="AddNameToBase">

                                    </Button>
                                    <Label
                                        x:Name="downTrayBuyer"
                                        Grid.Column="0"
                                        Grid.Row="14"
                                        Grid.ColumnSpan="10"
                                        FontSize="14"
                                        Padding="1 1 1 1"
                                        Margin="1,1,1,1"
                                        Background="AliceBlue"
                                        >
                                    </Label>

                                </Grid>
                            </TabItem.Content>
                        </TabItem>
                    </TabControl>
                </TabItem.Content>
            </TabItem>
            <!--//Покупатель-->
            <TabItem
                BorderBrush="LightGray"
                Background="LightGray"
                BorderThickness="1 1 1 1"
                FontFamily="Segoe UI"
                >
                <TabItem.Header>
                    <Label 
                        Padding="1 1 1 1"
                        Content="Повар" 
                        Width="120" 
                        FontSize="14" 
                        Height="20" 
                        FontWeight="Normal"
                        FontFamily="Segoe UI"
                        >
                    </Label>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <TabControl>
                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock 
                                        Text="Редактировать рецепты" 
                                        Width="auto" 
                                        FontSize="15" 
                                        Height="20" 
                                        FontWeight="Normal"
                                        FontFamily="Segoe UI">
                                    </TextBlock>
                                </TabItem.Header>
                                <TabItem.Content>
                                    <Grid x:Name="StackP">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"></ColumnDefinition>
                                            <ColumnDefinition Width="200"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="160"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"></RowDefinition>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition Height="400"></RowDefinition>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="20"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Rectangle 
                                            Grid.Column="0" 
                                            Grid.Row="0" 
                                            Grid.ColumnSpan="10" 
                                            Grid.RowSpan="12">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush>
                                                    <GradientStop 
                                                        Color="PaleTurquoise" 
                                                        Offset="0">
                                                    </GradientStop>
                                                    <GradientStop 
                                                        Color="LightCyan" 
                                                        Offset="1">
                                                    </GradientStop>
                                                </LinearGradientBrush>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <!--//Заливка всей страницы-->
                                        <Label 
                                            Grid.Row="0" 
                                            Grid.Column="0" 
                                            Grid.ColumnSpan="10" 
                                            Background="AliceBlue"
                                            FontFamily="Segoe UI">
                                        </Label>
                                        <!--//Верхняя строка-->
                                        <Label 
                                            FontFamily="Segoe UI"
                                            x:Name="DownTray" 
                                            Grid.Row="6" 
                                            Grid.Column="0" 
                                            Grid.ColumnSpan="5" 
                                            Background="AliceBlue" 
                                            VerticalContentAlignment="Top" 
                                            HorizontalContentAlignment="Right" 
                                            FontSize="12" 
                                            Padding="1 2 2 2" 
                                            Margin="0,1,0,0">
                                        </Label>
                                        <!--//Нижний трей-->
                                        <Label 
                                            FontFamily="Segoe UI"
                                            Grid.Row="3" 
                                            Grid.Column="1" 
                                            Background="AliceBlue" 
                                            Margin="1,1,0,1" 
                                            Content="Состав" 
                                            FontSize="15" 
                                            VerticalContentAlignment="Center"
                                            HorizontalContentAlignment="Center">
                                        </Label>
                                        <!--//Состав-->
                                        <Label
                                            FontFamily="Segoe UI"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Background="AliceBlue"
                                            Margin="1,1,0,1"
                                            Content="Цена"
                                            FontSize="15"
                                            VerticalContentAlignment="Center"
                                            HorizontalContentAlignment="Center">
                                        </Label>
                                        <!--//Цена-->
                                        <TextBox
                                            FontFamily="Segoe UI"
                                            x:Name="Price"
                                            Grid.Row="4"
                                            Grid.Column="2"
                                            FontSize="15"
                                            Background="LightGray"
                                            PreviewMouseDown="WrapPanelVisible"
                                            VerticalContentAlignment="Center"
                                            IsReadOnly="True"
                                            >
                                        </TextBox>
                                        <WrapPanel
                                            x:Name="WrapPanelNums"
                                            Visibility="Hidden"
                                            Grid.Row="5"
                                            Grid.Column="2"
                                            
                                Width="200"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                            
                                            Margin="1 8 1 1 ">
                                            <Button Margin="1 1 1 1" Click="ButnClick_1" Width="45" Height="40">1</Button>
                                            <Button Margin="1 1 1 1" Click="ButnClick_2" Width="45" Height="40">2</Button>
                                            <Button Margin="1 1 1 1" Click="ButnClick_3" Width="45" Height="40">3</Button>
                                            <Button Margin="1 1 1 1" Click="ButnClick_4" Width="45" Height="40">4</Button>
                                            <Button Margin="1 1 1 1" Click="ButnClick_5" Width="45" Height="40">5</Button>
