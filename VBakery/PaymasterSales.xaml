            Grid.RowSpan="2" Margin="1 1 1 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="White" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>-->
        <Button
            Click="Button_Click_Discount"
            Grid.Row="9"
            Grid.Column="0"
            Content="скидка 5%"
            FontSize="15"
            Background="White"
            Margin="0 1 0 1"
            >
        </Button>
        <Button
            Click="Button_Click_Allowance"
            Grid.Row="10"
            Grid.Column="0"
            Content="надбавка 5%"
            FontSize="15"
            Background="White"
            Margin="0 1 0 1"
            >
        </Button>
        <Label 
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="3" 
            Content="подытог" 
            HorizontalAlignment="Center" 
            Foreground="White" 
            VerticalContentAlignment="Top">
        </Label>
        <ScrollViewer 
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Hidden">
            <TextBlock
                x:Name="subtotal"
                Foreground="White"
                HorizontalAlignment="Center"
                FontSize="30"
                VerticalAlignment="Center"
            >
            </TextBlock>

        </ScrollViewer>
        <Rectangle Grid.Column="1" Grid.Row="10"
            Grid.ColumnSpan="3" Margin="3 2 2 2">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop x:Name="TotalColor" Color="White" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label
            Grid.Row="10"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Content="Итог"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            >

        </Label>
        <TextBlock
            Grid.Row="10"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Foreground="Black"
            FontSize="30"
            x:Name="total"
            FontWeight="Bold"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            >
        </TextBlock>
        <Button 
            Click="Button_Click_Total"
            Grid.Column="4"
            Grid.Row="10"
            Grid.ColumnSpan="3"
            Content="Итог"
            FontSize="20"
            Foreground="Wheat"
            Background="Black"
            Margin="1 1 1 1"
            >
        </Button>
        <Button
            x:Name="Click_GotoKitchen"
            Click="Button_Click_GotoKitchen"
            Grid.Column="7"
            Grid.Row="10"
            FontSize="13"
            Foreground="Black"
            Background="LightCoral"
            Margin="1 1 1 1">
            <TextBlock
                TextAlignment="Center">Отправить<LineBreak/>заказ
            <LineBreak/>повару</TextBlock>
        </Button>
        <Rectangle Grid.Column="0" Grid.Row="11"
            Grid.ColumnSpan="11" Margin="1 1 1 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop x:Name="ErrorsColor" Color="LightSkyBlue" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock
            x:Name="Errors"
            Grid.Column="1" Grid.Row="11"
            Grid.ColumnSpan="10"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            FontSize="10"
            Margin=" 0 1 80 1">

        </TextBlock>

