        <Rectangle Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="11" Grid.RowSpan="12">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="Black" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="11"
            Grid.RowSpan="12">
            <Rectangle.Fill>
                <LinearGradientBrush
                    >
                    <GradientStop Color="Black" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock
            FontSize="12"
            Grid.Column="0"
            Grid.Row="1"
            Foreground="Wheat"
            VerticalAlignment="Center"
            x:Name="Times"
            ></TextBlock>
        <Rectangle 
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="10">
            <Rectangle.Fill>
                <LinearGradientBrush
                    >
                    <GradientStop Color="Indigo" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image
            Margin="1 1 1 1"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\image.jfif"
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Left"
            ></Image>
        <Button
            Click="ButtonClickClose"
            BorderBrush="Transparent"
            Grid.Column="11"
            Grid.Row="0"
            Background="Transparent"
            HorizontalAlignment="Right"
            Width="30">
            <Image
            Width="15"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\close.png"
            >
            </Image>
        </Button>
        <Label
            Margin="30 0 0 0"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Content="Вкусляндия"
            Foreground="Wheat"
            FontSize="20"
            FontFamily="Monotype Corsiva"
            >
        </Label>
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            x:Name="time"
            Foreground="Wheat"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            >
        </TextBlock>
        <TextBlock
            Grid.Row="1"
            Grid.Column="6"
            x:Name="NamePaymaster"
            Foreground="Wheat"
            Text="Кассир"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            >
        </TextBlock>
        <TextBlock
            Grid.Row="1"
            Grid.Column="7"
            Text="Смена открыта:"
            Foreground="Wheat"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="12"
            >
        </TextBlock>
        <TextBlock
            Grid.Row="1"
            Grid.Column="7"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            x:Name="OpenTime"
            Foreground="Wheat" Grid.ColumnSpan="3" FontSize="12" Margin="92,0,92,0"
            >
        </TextBlock>
        <Rectangle Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" Margin="0 1 0 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="LightBlue" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Grid.Row="2" Grid.Column="3" Width="30" Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\block.png" MouseDown="Image_MouseDown_Lock"></Image>
        <Image Grid.Row="2" Grid.Column="0" Margin="1 1 0 1" Width="40"
               Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\calculator.png" MouseDown="OpenCalculator" ></Image>
        <Image Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\recepts.png" Width="40" Grid.Row="2" Grid.Column="1"  Margin="0 1 0 1" MouseDown="OpenRecepts"></Image>
        <Image Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\chat.png" Width="40" Grid.Row="2" Grid.Column="2"  Margin="0 1 0 1" MouseDown="openChat" ></Image>
        
        <Rectangle Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="3" Margin="1 1 1 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="White" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Grid.Row="2" Grid.Column="4" Width="20" Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\strelka.png" MouseDown="Image_MouseDown_Clear"></Image>
        <Image MouseDown="Image_MouseDown_FindOrder" Grid.Row="2" Grid.Column="5" Width="20" Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\poisk.png"></Image>
        <Image Grid.Row="2" Grid.Column="6" Width="20" Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\dom.png" MouseDown="Image_MouseDown_GetBackHome"></Image>
        <Rectangle Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="3" Margin="2 2 2 2">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="LightGreen" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="I" Grid.Column="7" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Margin="2 2 0 1"></Label>
        <Label Content="II" Grid.Column="8" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"  Margin="0 2 0 1"></Label>
        <Label Content="III" Grid.Column="9" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"  Margin="0 2 0 1"></Label>

        <Rectangle Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4"
            Grid.RowSpan="6" Margin="1 1 1 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="White" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Button Grid.Column="7" Grid.Row="3" Margin="1 1 1 1" Click="Button_Click">
            <TextBlock x:Name="BtnClickText" TextAlignment="Center" FontSize="13">Свекла</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="3" Margin="1 1 1 1" Click="Button_Click_1">
            <TextBlock TextAlignment="Center" FontSize="13">Макароны<LineBreak/>отварные</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="3" Margin="1 1 1 1" Click="Button_Click_3" >
            <TextBlock TextAlignment="Center" FontSize="13">Рассольник</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="4" Margin="1 1 1 1" Click="Button_Click_4">
            <TextBlock TextAlignment="Center" FontSize="13">Салат из моркови<LineBreak/>с майонезом</TextBlock>
        </Button>
        <Button Grid.Column="7" Grid.Row="4" Margin="1 1 1 1" Click="Button_Click_5">
            <TextBlock TextAlignment="Center" FontSize="13">Рис</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="4" Margin="1 1 1 1" Click="Button_Click_6">
            <TextBlock TextAlignment="Center" FontSize="13">Суп<LineBreak/>вермишелевый</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="5" Margin="1 1 1 1" Click="Button_Click_7">
            <TextBlock TextAlignment="Center" FontSize="13">Салат<LineBreak/>из капусты</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="6" Margin="1 1 1 1" Click="Button_Click_8">
            <TextBlock TextAlignment="Center" FontSize="13">Нарезка:<LineBreak/>огурцы, помидоры</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="7" Margin="1 1 1 1" Click="Button_Click_9">
            <TextBlock TextAlignment="Center" FontSize="13">масло</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="8" Margin="1 1 1 1" Click="Button_Click_10">
            <TextBlock TextAlignment="Center" FontSize="13">Хлеб ржаной</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="9" Margin="1 1 1 1" Click="Button_Click_11">
            <TextBlock TextAlignment="Center" FontSize="13">Салат<LineBreak/>"Лобио"</TextBlock>
        </Button>
        <Button Grid.Column="9" Grid.Row="10" Margin="1 1 1 1" Click="Button_Click_12">
            <TextBlock TextAlignment="Center" FontSize="13">Зелень<LineBreak/>нарезка</TextBlock>
        </Button>
        
