        <ScrollViewer
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.RowSpan="6"
            VerticalScrollBarVisibility ="Auto"
            Margin="1 1 1 1" 
            >
            <TextBlock 
            x:Name="TextArea"
            FontSize="20"
            Foreground="Black" 
   
            >
            </TextBlock>
        </ScrollViewer>
        <Rectangle Grid.Column="4" Grid.Row="8"
            Grid.ColumnSpan="3" Margin="1 1 1 1">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="White" Offset="0"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label
            Grid.Row="7"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Комментарий по заказу"
            Foreground="White"
            >
        </Label>
        <ScrollViewer
            Grid.Row="8"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            VerticalScrollBarVisibility="Auto"
            Margin="2 1 1 1">
            <TextBox
            x:Name="commForKitchen"
            TextWrapping="Wrap"
            FontSize="15"
            >
            </TextBox>
        </ScrollViewer>

        <ScrollViewer
            Grid.Row="3"
            Grid.Column="3"
            Grid.RowSpan="6"
            VerticalScrollBarVisibility ="Auto"
            Margin="1 1 1 1" 
            >
            <TextBlock
            x:Name="NumArea"
            FontSize="20"
            Foreground="Black"
            Margin="1 1 1 1" 
            >
            </TextBlock>
        </ScrollViewer>
