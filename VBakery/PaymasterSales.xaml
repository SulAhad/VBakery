        <Button  Grid.Column="8" Grid.Row="5" Margin="1 1 1 1" Click="Button_Click_13">
            <TextBlock TextAlignment="Center" FontSize="13">Компот<LineBreak/>из сухофруктов</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="6" Margin="1 1 1 1" Click="Button_Click_14">
            <TextBlock TextAlignment="Center" FontSize="13">Соус красный</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="7" Margin="1 1 1 1" Click="Button_Click_15">
            <TextBlock TextAlignment="Center" FontSize="13">Напиток<LineBreak/>ягодный</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="8" Margin="1 1 1 1" Click="Button_Click_16" >
            <TextBlock TextAlignment="Center" FontSize="13">Майонез</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="9" Margin="1 1 1 1" Click="Button_Click_17">
            <TextBlock TextAlignment="Center" FontSize="13">Чай с<LineBreak/>лимоном</TextBlock>
        </Button>
        <Button Grid.Column="8" Grid.Row="10" Margin="1 1 1 1" Click="Button_Click_18">
            <TextBlock TextAlignment="Center" FontSize="13">Сметана</TextBlock>
        </Button>
        <Button Grid.Column="7" Grid.Row="5" Margin="1 1 1 1" Click="Button_Click_19">
            <TextBlock TextAlignment="Center" FontSize="13">Чай 0.2</TextBlock>
        </Button>
