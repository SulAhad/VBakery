        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Text="Дата доставки"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20"
            >
        </TextBlock>
        <DatePicker
            Width="auto"
            Margin="2 2 2 2"
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            IsTodayHighlighted="False"
            Background="Transparent"
            Focusable = "False"
            x:Name="dateOrder"
            Grid.Row="6"
            Grid.Column="2"
            VerticalContentAlignment="Center"
            >
        </DatePicker>
        <TextBlock
            Grid.Row="7"
            Grid.Column="1"
            Text="Адресс доставки"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20"
            >
        </TextBlock>
        <TextBox
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            Cursor="IBeam"
            x:Name="address"
            Grid.Row="7"
            Grid.Column="2"
            Margin="2 2 2 2"
            FontSize="20"
            TextWrapping="Wrap"
            Background="Transparent"
            Foreground="Wheat"
            >
            
        </TextBox>
        <TextBlock
            x:Name="CommToolTip"
            Grid.Row="8"
            Grid.Column="1"
            Text="Комментарии"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20">
        </TextBlock>
        <Image 
            Grid.Column="1"
            Grid.Row="8"
            Margin="80 0 0 0"
            Width="5"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\star.png">
        </Image>
        <TextBox
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            Cursor="IBeam"
            x:Name="comm"
            Grid.Row="8"
            Grid.Column="2"
            Margin="2 2 2 2"
            FontSize="20"
            TextWrapping="Wrap"
            Background="Transparent"
            Foreground="Wheat"
            >

        </TextBox>
        <Label
            Visibility="Visible"
            MouseEnter="SendOrderButton_MouseEnter"
            MouseLeave="SendOrderButton_MouseLeave"
            x:Name="SendOrderButton"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            MouseDown="Send"
            Grid.Row="9"
            Grid.Column="2"
            Height="30"
            Content="Отправить"
            FontSize="15"
            Foreground="Wheat"
            Background="Transparent"
            >
        </Label>
    </Grid>
