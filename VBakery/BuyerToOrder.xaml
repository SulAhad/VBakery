<Window x:Class="VBakery.BuyerToOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VBakery"
        mc:Ignorable="d"
        Title="BuyerOrder" Height="768" 
        Width="1024"  WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Grid.RowSpan="20">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="Black" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle><!--//Заливка окна-->
        <Rectangle 
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="7">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="Indigo" Offset="0"></GradientStop>
                    <GradientStop Color="#4e4e4e" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle><!--//Заливка верхнего трея-->
        <Image
            Margin="1 1 1 1"
            Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\image.jfif"
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Left">
            
        </Image><!--//Картинка Вкусляндия-->
        <Button
            Click="ButtonClickClose"
            BorderBrush="Transparent"
            Grid.Column="6"
            Grid.Row="0"
            Background="Transparent">
            <Image
                Width="15"
                Source="E:\Мои проекты\C#\VBakery\VBakery\Images\Icons\close.png"
            >
            </Image>
        </Button><!--//Кнопка закрыть окно-->
        <Label
            Margin="30 0 0 0"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Content="Вкусляндия"
            Foreground="Wheat"
            FontSize="20"
            FontFamily="Monotype Corsiva"
            >
        </Label><!--//Надпись Вкусляндия-->
        <Label
            Content="Оформить заказ"
            FontSize="30"
            Foreground="Wheat"
            FontFamily="Monotype Corsiva"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center"
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            >
        </Label><!--//Надпись оформить заказ-->
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Text="Введите имя"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20">
        </TextBlock><!--//Надпись введите имя-->
        <TextBox
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            Background="Transparent"
            Foreground="Wheat"
            Cursor="IBeam"
            x:Name="name"
            Grid.Row="2"
            Grid.Column="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Margin="2 2 2 2">
        </TextBox><!--//Окно ввода имени-->
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Text="Номер телефона"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20">
        </TextBlock>
        
        <TextBox
            
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            Background="Transparent"
            Cursor="IBeam"
            x:Name="mobile"
            Grid.Row="3"
            Grid.Column="2"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Margin="2 2 2 2"
            Foreground="Wheat">
        </TextBox>
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Text="Ваш заказ"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20"
            >
            
        </TextBlock>
        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Text="Сумма заказа"
            Foreground="Wheat"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="20"
            >

        </TextBlock>
        <TextBlock
            Background="Transparent"
            Cursor="IBeam"
            x:Name="TotalPrice"
            Grid.Row="5"
            Grid.Column="2"
            FontSize="20"
            Margin="2 2 2 2"
            Foreground="Wheat">
        </TextBlock>
        <ScrollViewer
            BorderBrush="Wheat"
            BorderThickness="1 1 1 1"
            Grid.Row="4"
            Grid.Column="2"
            VerticalScrollBarVisibility="Hidden"
            HorizontalScrollBarVisibility="Hidden">
            <TextBlock
            Foreground="Wheat"
                VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="20"
            x:Name="InputOrderArea"
            >

            </TextBlock>
        </ScrollViewer>
        
