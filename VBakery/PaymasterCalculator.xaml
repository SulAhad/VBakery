<Window x:Class="VBakery.PaymasterCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window_sale" Height="800" Width="500" WindowState="Maximized">
    <Grid x:Name="mainElement">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" 
                 Grid.ColumnSpan="5" 
                 Margin="10,10,10,10" 
                 VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Right"
                 MaxLength="20" Cursor="Arrow"
                 FontSize="40">0</TextBox>
        <Button Background="AliceBlue" Grid.Row="1" Grid.Column="1" FontSize="40">1</Button>
        <Button Background="AliceBlue" Grid.Row="1" Grid.Column="2" FontSize="40">2</Button>
        <Button Background="AliceBlue" Grid.Row="1" Grid.Column="3" FontSize="40">3</Button>
        <Button Background="AliceBlue" Grid.Row="2" Grid.Column="1" FontSize="40">4</Button>
        <Button Background="AliceBlue" Grid.Row="2" Grid.Column="2" FontSize="40">5</Button>
        <Button Background="AliceBlue" Grid.Row="2" Grid.Column="3" FontSize="40">6</Button>
        <Button Background="AliceBlue" Grid.Row="3" Grid.Column="1" FontSize="40">7</Button>
        <Button Background="AliceBlue" Grid.Row="3" Grid.Column="2" FontSize="40">8</Button>
        <Button Background="AliceBlue" Grid.Row="3" Grid.Column="3" FontSize="40">9</Button>
        <Button Grid.Row="4" Grid.Column="1" FontSize="40">AC</Button>
        <Button Grid.Row="4" Grid.Column="2" FontSize="40">0</Button>
        <Button Grid.Row="4" Grid.Column="3" FontSize="40">,</Button>
        <Button Grid.Row="1" Grid.Column="4" FontSize="40">-</Button>
        <Button Grid.Row="2" Grid.Column="4" FontSize="40">+</Button>
        <Button Grid.Row="1" Grid.Column="0" FontSize="40">/</Button>
        <Button Grid.Row="2" Grid.Column="0" FontSize="40">*</Button>
        <Button Grid.Row="3" Grid.Column="0" FontSize="40">+/-</Button>
        <Button Grid.Row="4" Grid.Column="0" FontSize="40">&lt;</Button>
        <Button Background="Orange" Grid.Row="3" Grid.Column="4" FontSize="40" Grid.RowSpan="2">=</Button>

        <Button Click="ButtonClick_back" Grid.Row="0" Grid.Column="5" FontSize="20">Назад</Button>
                                             
        <Button Grid.Row="1" Grid.Column="5" FontSize="40">&lt;-</Button>
        <Button Grid.Row="2" Grid.Column="5" FontSize="40">-&gt;</Button>
                                             
        <Button Grid.Row="3" Grid.Column="5" FontSize="40">(</Button>
        <Button Grid.Row="4" Grid.Column="5" FontSize="40">)</Button>
    </Grid>
</Window>
